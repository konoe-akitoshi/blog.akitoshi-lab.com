# 開発用Dockerfile
FROM node:20-alpine

# 必要なパッケージをインストール
RUN apk add --no-cache libc6-compat python3 make g++ postgresql-client

WORKDIR /app

# pnpmをインストール
RUN corepack enable && corepack prepare pnpm@latest --activate

# 依存関係ファイルをコピー
COPY package.json pnpm-lock.yaml ./

# 依存関係をインストール
RUN pnpm install --frozen-lockfile

# ポートを公開
EXPOSE 3000

# 開発サーバーを起動
CMD ["pnpm", "dev"]